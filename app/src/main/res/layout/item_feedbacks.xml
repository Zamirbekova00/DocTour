<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_24dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/simple_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_42dp"
        android:text="@string/doctor_asanov"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/small_white_text"
        android:layout_width="@dimen/_59dp"
        android:layout_height="@dimen/_24dp"
        android:layout_marginTop="@dimen/_42dp"
        android:layout_marginEnd="@dimen/_17dp"
        android:background="@drawable/circle_tv_bg"
        android:gravity="end|center"
        android:paddingStart="@dimen/_17dp"
        android:paddingEnd="@dimen/_16dp"
        android:text="@string/_5"
        app:drawableStartCompat="@drawable/layer_list_img8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_feedback"
        style="@style/small_black_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_19dp"
        android:text="@string/feedback_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />

    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:layout_marginStart="@dimen/_18dp"
        android:layout_marginTop="@dimen/_22dp"
        android:background="@drawable/img_9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

    <TextView
        android:id="@+id/tv_likes"
        style="@style/medium_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_48dp"
        android:layout_marginTop="@dimen/_23dp"
        android:text="@string/_46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

    <TextView
        android:id="@+id/tv_dateOfFeedback"
        style="@style/medium_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_64dp"
        android:layout_marginTop="@dimen/_23dp"
        android:text="@string/_6_days_ago"
        app:layout_constraintStart_toEndOf="@id/tv_likes"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

</androidx.constraintlayout.widget.ConstraintLayout>