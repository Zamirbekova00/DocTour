<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_arrow_back"
            style="@style/simple_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            app:drawableStartCompat="@drawable/arrow_back" />

        <TextView
            android:id="@+id/tv_name_of_doctor"
            style="@style/simple_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="@string/doctor_asanov" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/small_white_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:background="@drawable/circle_tv_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_12dp"
                android:paddingEnd="@dimen/_11dp"
                android:text="@string/all"
                app:drawableStartCompat="@drawable/layer_list_img8" />

            <TextView
                style="@style/small_parl_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/_5"
                app:drawableStartCompat="@drawable/layer_list_img10" />

            <TextView
                style="@style/small_parl_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/_4"
                app:drawableStartCompat="@drawable/layer_list_img10" />

            <TextView
                style="@style/small_parl_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/_3"
                app:drawableStartCompat="@drawable/layer_list_img10" />

            <TextView
                style="@style/small_parl_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/_2"
                app:drawableStartCompat="@drawable/layer_list_img10" />

            <TextView
                style="@style/small_parl_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_24dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="end|center"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_18dp"
                android:text="@string/_1"
                app:drawableStartCompat="@drawable/layer_list_img10" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_feedbacks" />
</LinearLayout>