<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.appoiment.AppoimentRescheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_11dp"
            android:background="@drawable/img_14"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            style="@style/simple_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_20dp"
            android:text="@string/Re_schedule"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/arrow_back"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/Select_the_date"
        style="@style/simple_black_text"
       app:layout_constraintTop_toBottomOf="@id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="@dimen/_370dp"
        android:layout_height="@dimen/_294dp"
        android:background="@drawable/calendar_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_16dp"
        />

    <TextView
        android:id="@+id/tv_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Select_the_time"
        style="@style/simple_black_text"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_09"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:background="@drawable/button"
        android:text="   9:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
       app:layout_constraintTop_toBottomOf="@id/tv_times"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_4dp"
        />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip_10"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:background="@drawable/button"
        android:text="  10:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
       app:layout_constraintTop_toBottomOf="@id/tv_times"
        app:layout_constraintStart_toEndOf="@id/chip_09"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginStart="@dimen/_12dp"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_11"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:background="@drawable/button"
        android:text="  11:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_times"
        app:layout_constraintStart_toEndOf="@id/chip_10"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"
         />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip_12"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:background="@drawable/button"
        android:text="   12:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_times"
        app:layout_constraintStart_toEndOf="@id/chip_11"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_13"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/button"
        android:text="  13:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/chip_09"
        app:layout_constraintStart_toStartOf="parent"
       />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip_14"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/button"
        android:text="  14:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/chip_10"
        app:layout_constraintStart_toEndOf="@id/chip_13"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_15"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/button"
        android:text="  15:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintStart_toEndOf="@id/chip_14"
        app:layout_constraintTop_toBottomOf="@id/chip_11"
        />


    <com.google.android.material.chip.Chip
        android:id="@+id/chip_16"
        android:layout_width="@dimen/_84dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/button"
        android:text="   16:00"
        android:textColor="@color/blue"
        app:chipCornerRadius="@dimen/_16dp"
        app:layout_constraintStart_toEndOf="@id/chip_15"
        app:layout_constraintTop_toBottomOf="@id/chip_12"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change"
        android:layout_width="@dimen/_380dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:backgroundTint="@color/blue"
        android:text="@string/Change"
        android:textSize="@dimen/_15sp"
        app:cornerRadius="@dimen/_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/include_appoiment_reschedule_success"
        layout="@layout/fragment_appoiment_reschedule_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>