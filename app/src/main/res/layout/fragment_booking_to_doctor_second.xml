<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.booking.BookingToDoctorSecondFragment">

        <TextView
            android:id="@+id/arrow_back"
            style="@style/simple_black_text"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_11dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_26dp"
            android:background="@drawable/img_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            style="@style/simple_black_text"
            app:layout_constraintStart_toEndOf="@id/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_16dp"
            />

   <LinearLayout
       android:id="@+id/linear"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintTop_toBottomOf="@id/arrow_back"
       android:layout_marginTop="@dimen/_24dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginHorizontal="@dimen/_16dp"
       >

       <TextView
           android:id="@+id/tv_fio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/fio"
           style="@style/simple_bold_parl_text"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/til_fio"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_8dp"
           android:hint="@string/name_profile"
           android:textColorHint="@color/grey"
           app:boxCornerRadiusBottomEnd="@dimen/_10dp"
           app:boxCornerRadiusBottomStart="@dimen/_10dp"
           app:boxCornerRadiusTopEnd="@dimen/_10dp"
           app:boxCornerRadiusTopStart="@dimen/_10dp"
           app:boxStrokeColor="@color/blue"
           app:placeholderTextColor="@color/blue"
           app:hintTextColor="@color/parlament"
           >

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/et_fio"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPersonName"
               android:singleLine="true"
               android:textStyle="bold" />

       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:id="@+id/tv_gender"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_24dp"
           android:text="@string/gender"
           style="@style/simple_bold_parl_text"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/til_gender"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_8dp"
           app:boxCornerRadiusBottomEnd="@dimen/_10dp"
           app:boxCornerRadiusBottomStart="@dimen/_10dp"
           app:boxCornerRadiusTopEnd="@dimen/_10dp"
           app:boxCornerRadiusTopStart="@dimen/_10dp"
           app:boxStrokeColor="@color/blue"
           app:placeholderTextColor="@color/blue"
           app:hintTextColor="@color/parlament">

           <AutoCompleteTextView
               android:labelFor="@id/autv_gender"
               android:id="@+id/autv_gender"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:inputType="none"
               android:text="@string/female"
               android:textColor="@color/grey"
               android:textStyle="bold"
               />

       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:id="@+id/tv_age"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_24dp"
           android:text="@string/age"
           style="@style/simple_bold_parl_text"/>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/til_age"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_8dp"
           android:hint="@string/_25"
           android:textColorHint="@color/grey"
           app:boxCornerRadiusBottomEnd="@dimen/_10dp"
           app:boxCornerRadiusBottomStart="@dimen/_10dp"
           app:boxCornerRadiusTopEnd="@dimen/_10dp"
           app:boxCornerRadiusTopStart="@dimen/_10dp"
           app:boxStrokeColor="@color/blue"
           app:placeholderTextColor="@color/blue"
           app:hintTextColor="@color/parlament"
           >

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/et_age"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="number"
               android:singleLine="true"
               android:textStyle="bold" />

       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:id="@+id/tv_describe_your_problem"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_24dp"
           android:text="@string/describe_your_problem"
           style="@style/simple_bold_parl_text"
           />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/til_description"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_8dp"
           android:hint="@string/description"
           android:textColorHint="@color/grey"
           app:boxCornerRadiusBottomEnd="@dimen/_10dp"
           app:boxCornerRadiusBottomStart="@dimen/_10dp"
           app:boxCornerRadiusTopEnd="@dimen/_10dp"
           app:boxCornerRadiusTopStart="@dimen/_10dp"
           app:boxStrokeColor="@color/blue"
           app:placeholderTextColor="@color/blue"
           app:hintTextColor="@color/parlament">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/et_description"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="text"
               android:maxLines="1"
               android:paddingStart="@dimen/_16dp"
               android:paddingTop="@dimen/_16dp"
               android:paddingBottom="@dimen/_108dp"
               android:scrollHorizontally="true"
               android:singleLine="true"
               android:textStyle="bold" />

       </com.google.android.material.textfield.TextInputLayout>

   </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_make_an_appointment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:backgroundTint="@color/blue"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_32dp"
        />
    <include
        android:id="@+id/include_success_booking"
        layout="@layout/fragment_booking_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <include
        android:id="@+id/include_failed_booking"
        layout="@layout/fragment_booking_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>