<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tv_search"
        style="@style/et_black"
        android:layout_width="@dimen/_293dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_20dp"
        android:autofillHints="name"
        android:background="@drawable/circle_edit_bg"
        android:drawableStart="@drawable/search"
        android:drawableEnd="@drawable/layer_list_img11"
        android:hint="@string/search"
        android:inputType="text"
        android:maxLines="2"
        android:paddingStart="@dimen/_8dp"
        android:paddingEnd="@dimen/_14dp"
        app:layout_constraintStart_toEndOf="@id/tv_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_arrow_back"
        android:layout_width="@dimen/_28dp"
        android:layout_height="@dimen/_21dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_36dp"
        android:background="@drawable/arrow_back"
        app:layout_constraintEnd_toStartOf="@id/tv_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28dp"
            android:layout_marginTop="@dimen/_26dp"
            android:orientation="horizontal">

            <TextView
                style="@style/medium_white_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv_bg"
                android:gravity="center"
                android:text="@string/all" />

            <TextView
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/dentist" />

            <TextView
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/eye_doctor" />

            <TextView
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/pediatrician" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_found"
        style="@style/simple_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_14dp"
        android:text="@string/found"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_found"
        tools:listitem="@layout/item_found_vecancies" />

</androidx.constraintlayout.widget.ConstraintLayout>