<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.home.search.SearchFragment">

    <EditText
        android:id="@+id/et_search"
        style="@style/et_black"
        android:layout_width="@dimen/_293dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_20dp"
        android:autofillHints="name"
        android:background="@drawable/circle_edit_bg"
        android:drawableStart="@drawable/search"
        android:drawableEnd="@drawable/layer_list_img11"
        android:hint="@string/search"
        android:inputType="text"
        android:maxLines="2"
        android:paddingStart="@dimen/_8dp"
        android:paddingEnd="@dimen/_14dp"
        app:layout_constraintStart_toEndOf="@id/tv_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_arrow_back"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_11dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_38dp"
        android:background="@drawable/img_14"
        app:layout_constraintEnd_toStartOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28dp"
            android:layout_marginTop="@dimen/_26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all"
                style="@style/medium_white_text"
                android:layout_width="@dimen/_64dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv_bg"
                android:gravity="center"
                android:text="@string/all" />

            <TextView
                android:id="@+id/tv_dentist"
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/dentist" />

            <TextView
                android:id="@+id/tv_eye_doc"
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/eye_doctor" />

            <TextView
                android:id="@+id/tv_pediatric"
                style="@style/medium_parl_text"
                android:layout_width="@dimen/_96dp"
                android:layout_height="@dimen/_26dp"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/circle_tv2_bg"
                android:gravity="center"
                android:text="@string/pediatrician" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_found"
        style="@style/simple_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_14dp"
        android:text="@string/found"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_24dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_found"
        tools:listitem="@layout/item_found_vecancies" />

    <ProgressBar
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progressBar"
        android:indeterminateDrawable="@drawable/progress_bar_b"
        />
    <include
        android:id="@+id/include_not_found"
        layout="@layout/not_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>