<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_item_vector"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:layout_marginStart="@dimen/_20dp"
            android:background="@color/calendar"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CornerRadius" />

        <ImageView
            android:id="@+id/img_doctor_avatar_vector"
            android:layout_width="@dimen/_46dp"
            android:layout_height="@dimen/_34dp"
            android:layout_marginStart="@dimen/_6dp"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_people"
            app:layout_constraintBottom_toTopOf="@id/tv_doctor_specs"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_specs" />

        <TextView
            android:id="@+id/tv_doctor_specs"
            android:layout_width="@dimen/_59dp"
            android:layout_height="@dimen/_16dp"
            android:layout_marginStart="@dimen/_14dp"
            android:layout_marginTop="@dimen/_50dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/Therapist"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sp"
            app:layout_constraintStart_toStartOf="@id/img_item_vector"
            app:layout_constraintTop_toTopOf="@id/img_item_vector" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>