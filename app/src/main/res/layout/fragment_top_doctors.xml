<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.home.category.TopDoctorsFragment">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_12dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_18dp"
        android:src="@drawable/ic_arrowleft_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/symbol"/>

    <TextView
        android:id="@+id/tv_best_docotrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sp"
        android:layout_marginTop="@dimen/_12sp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/best_doctors"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="@dimen/_64dp"
        android:layout_height="@dimen/_26dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_26dp"
        android:background="@drawable/circle_tv_bg"
        android:gravity="center"
        android:text="@string/all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_best_docotrs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_best_doctors"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/tv_all"
        app:layout_constraintStart_toEndOf="@+id/tv_all"
        app:layout_constraintTop_toBottomOf="@id/tv_best_docotrs"
        tools:listitem="@layout/item_the_best_doctors" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@id/img_back"
        app:layout_constraintTop_toBottomOf="@id/rv_best_doctors"
        tools:listitem="@layout/item_doctors_info" />

</androidx.constraintlayout.widget.ConstraintLayout>

