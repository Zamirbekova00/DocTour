<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_circle"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:id="@+id/v_line"
        android:layout_width="56dp"
        android:layout_height="3dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="8dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="Выйти"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/v_second_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:background="@color/light_blue" />

    <TextView
        android:id="@+id/tv_do_you_want_to_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Вы уверены что хотите выйти из приложения?"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bsh_btn_back"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/light_blue"
            android:text="Назад"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bsh_btn_confirm"
            android:layout_width="152dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/blue"
            android:text="Да, выйти"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>