<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.fragments.home.category.FavoriteDoctorsFragment">

    <ImageView
        android:id="@+id/img_back"
        style="@style/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrowleft_3"

        />

    <TextView
        android:id="@+id/tv_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/My_Favorite"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginStart="@dimen/_16dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_favorites"
        android:layout_marginTop="@dimen/_24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_18dp"
        android:layout_marginEnd="@dimen/_16dp"
        tools:listitem="@layout/item_doctors_info"

        />


</androidx.constraintlayout.widget.ConstraintLayout>